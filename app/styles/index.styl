html
    background: url('/static/images/airplane-blue-sky.jpg') no-repeat center center fixed
    -webkit-background-size: cover
    -moz-background-size: cover
    -o-background-size: cover
    background-size: cover

#signup
    position: absolute
    top: 20%
    width: 100%

    > div
        width: 400px
        height: 300px
        margin: 0 auto
        background: rgba(0, 0, 0, 0.7)
        border-radius: 10px

        text-align: center
        color: white
        padding-top: 30px

        h1
            font-family: merienda-one, serif
            font-size: 60px
            font-weight: bold
            font-style: italic
            padding: 20px
            opacity: 1.0

        p 
            font-family: playball, serif
            font-size: 30px
            font-weight: normal
            padding-top: 30px

        #submission
            margin-top: 50px
            label
                color: white
